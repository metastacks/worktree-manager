<idea-plugin>
    <id>org.metastacks.worktree-manager</id>
    <name>Worktree Manager</name>
    <vendor email="support@metastacks.org" url="https://github.com/metastacks">Metastacks LLC</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>Git4Idea</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Project-level service for worktree operations -->
        <projectService
            serviceInterface="org.metastacks.worktree.services.WorktreeService"
            serviceImplementation="org.metastacks.worktree.services.WorktreeServiceImpl"/>

        <!-- Application-level service for tracking open worktree windows -->
        <applicationService
            serviceInterface="org.metastacks.worktree.services.WorktreeWindowService"
            serviceImplementation="org.metastacks.worktree.services.WorktreeWindowServiceImpl"/>

        <!-- Project name decorator for worktree indicator -->
        <projectViewNodeDecorator
            implementation="org.metastacks.worktree.ui.WorktreeProjectNameDecorator"/>

        <!-- Settings configurable under Version Control -->
        <projectConfigurable
            parentId="vcs"
            instance="org.metastacks.worktree.settings.WorktreeConfigurable"
            id="org.metastacks.worktree.settings"
            displayName="Worktree Manager"/>
    </extensions>

    <actions>
        <!-- Worktree action group added to Git menu -->
        <group id="WorktreeManager.MainGroup"
               text="Worktrees"
               description="Git worktree management"
               popup="true">

            <add-to-group group-id="Git.MainMenu"
                          anchor="after"
                          relative-to-action="Git.Show.WorkingTrees"/>

            <!-- Also add to Project View context menu -->
            <add-to-group group-id="ProjectViewPopupMenu"
                          anchor="last"/>

            <action id="WorktreeManager.Create"
                    class="org.metastacks.worktree.actions.CreateWorktreeAction"
                    text="Create Worktree..."
                    description="Create a new git worktree"/>

            <action id="WorktreeManager.Open"
                    class="org.metastacks.worktree.actions.OpenWorktreeAction"
                    text="Open Worktree..."
                    description="Open an existing worktree in a new window"/>

            <action id="WorktreeManager.Remove"
                    class="org.metastacks.worktree.actions.RemoveWorktreeAction"
                    text="Remove Worktree..."
                    description="Remove an existing worktree"/>

            <separator/>

            <group id="WorktreeManager.SwitchGroup"
                   class="org.metastacks.worktree.actions.SwitchWorktreeActionGroup"
                   text="Switch to Worktree"
                   description="Switch to another worktree"
                   popup="true"/>
        </group>

        <!-- Top-level context menu actions for worktree folders -->
        <action id="WorktreeManager.OpenFolder"
                class="org.metastacks.worktree.actions.OpenWorktreeFolderAction"
                text="Open Worktree in New Window"
                description="Open this worktree in a new IDE window"
                icon="AllIcons.Actions.OpenNewTab">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="first"/>
        </action>

        <action id="WorktreeManager.RemoveFolder"
                class="org.metastacks.worktree.actions.RemoveWorktreeFolderAction"
                text="Remove Worktree"
                description="Remove this worktree"
                icon="AllIcons.Actions.GC">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="after" relative-to-action="WorktreeManager.OpenFolder"/>
        </action>
    </actions>
</idea-plugin>
